    "prod": "set NODE_ENV=production && concurrently \"tsc -w\" \"nodemon dist/js/server.js\"",
    "dev": "set NODE_ENV=development && concurrently \"tsc -w\" \"nodemon dist/js/server.js\"",
    "frontend": "NODE_ENV=frontend concurrently \"tsc -w\" \"nodemon dist/js/server.js\"",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint --ext js",
    "format": "prettier --write .",
    "test-all": "pnpm run check-format && pnpm run check-lint && pnpm run build"
  },
